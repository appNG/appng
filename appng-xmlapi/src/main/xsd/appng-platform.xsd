<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" xmlns="http://www.appng.org/schema/platform" xmlns:jxb="http://java.sun.com/xml/ns/jaxb"
	elementFormDefault="qualified" jxb:version="2.1" targetNamespace="http://www.appng.org/schema/platform" version="${project.version}">

	<xs:element name="page" type="pageDefinition" />
	<xs:element name="pages" type="pages" />
	<xs:element name="datasource" type="datasource" />
	<xs:element name="event" type="event" />

	<xs:element name="data" type="data" />

	<xs:element name="platform">
		<xs:annotation>
			<xs:documentation>The root element of an appNG target XML document.</xs:documentation>
			<xs:appinfo>
				<jxb:class>
					<jxb:javadoc>
<![CDATA[The root element of an appNG target XML document.]]>
					</jxb:javadoc>
				</jxb:class>
			</xs:appinfo>
		</xs:annotation>
		<xs:complexType>
			<xs:sequence>
				<xs:element name="config" type="platformConfig" />
				<xs:element name="subject" type="subject" minOccurs="0" />
				<xs:element name="navigation" type="navigation" />
				<xs:element name="content" type="content" minOccurs="0" />
			</xs:sequence>
			<xs:attribute name="version" type="xs:string" />
		</xs:complexType>
	</xs:element>
	
	<xs:element name="datasources">
		<xs:annotation>
			<xs:documentation>A wrapper for multiple &lt;datasource&gt;-elements.</xs:documentation>
			<xs:appinfo>
				<jxb:class>
					<jxb:javadoc>
<![CDATA[A wrapper for multiple  {@link Datasource}s.]]>
					</jxb:javadoc>
				</jxb:class>
			</xs:appinfo>
		</xs:annotation>
		<xs:complexType>
			<xs:sequence>
				<xs:element maxOccurs="unbounded" name="datasource" type="datasource" />
			</xs:sequence>
		</xs:complexType>
	</xs:element>

	<xs:element name="events">
		<xs:annotation>
			<xs:documentation>A wrapper for multiple &lt;event&gt;-elements.</xs:documentation>
			<xs:appinfo>
				<jxb:class>
					<jxb:javadoc>
<![CDATA[A wrapper for multiple  {@link Event}s.]]>
					</jxb:javadoc>
				</jxb:class>
			</xs:appinfo>
		</xs:annotation>
		<xs:complexType>
			<xs:sequence>
				<xs:element maxOccurs="unbounded" name="event" type="event" />
			</xs:sequence>
		</xs:complexType>
	</xs:element>

	<xs:element name="applicationRootConfig">
		<xs:annotation>
			<xs:documentation>The root configuration of the application, defining session parameters and navigation.</xs:documentation>
			<xs:appinfo>
				<jxb:class>
					<jxb:javadoc>
<![CDATA[The root configuration of the application, defining {@link SessionParams} and {@link Navigation}.]]>
					</jxb:javadoc>
				</jxb:class>
			</xs:appinfo>
		</xs:annotation>
		<xs:complexType>
			<xs:sequence>
				<xs:element name="name" type="xs:string" />
				<xs:element name="config" type="applicationConfig" />
				<xs:element name="navigation" type="linkpanel" minOccurs="0" />
				<xs:element name="pages" type="pages" minOccurs="0" />
			</xs:sequence>
			<xs:attribute name="id" type="xs:string">
				<xs:annotation>
					<xs:documentation>The id for this config.</xs:documentation>
					<xs:appinfo>
						<jxb:property>
							<jxb:javadoc>The id for this config.</jxb:javadoc>
						</jxb:property>
					</xs:appinfo>
				</xs:annotation>
			</xs:attribute>
		</xs:complexType>
	</xs:element>

	<xs:element name="textcontents">
		<xs:annotation>
			<xs:documentation>The root element for defining some text-elements.</xs:documentation>
		</xs:annotation>
		<xs:complexType>
			<xs:sequence>
				<xs:element name="textelements" type="textelements" maxOccurs="unbounded">
					<xs:annotation>
						<xs:documentation>A collection of text-elements of different types.</xs:documentation>
					</xs:annotation>
				</xs:element>
			</xs:sequence>
		</xs:complexType>
	</xs:element>

	<xs:simpleType name="expression">
		<xs:annotation>
			<xs:documentation><![CDATA[An expression uses page-/datasource-/action-parameters and the syntax ${<param>}]]></xs:documentation>
		</xs:annotation>
		<xs:restriction base="xs:string">
			<xs:pattern value="\$\{.*\}" />
		</xs:restriction>
	</xs:simpleType>

	<xs:simpleType name="booleanValue">
		<xs:annotation>
			<xs:documentation>A booleanValue can either be true or false, and can be the result of an expression.</xs:documentation>
		</xs:annotation>
		<xs:union memberTypes="xs:boolean expression" />
	</xs:simpleType>

	<xs:simpleType name="stringValue">
		<xs:annotation>
			<xs:documentation>A string value, which can be the result of an expression</xs:documentation>
		</xs:annotation>
		<xs:union memberTypes="xs:string expression" />
	</xs:simpleType>

	<xs:complexType name="structureDef">
		<xs:annotation>
			<xs:documentation>Defines the structure within a page.</xs:documentation>
			<xs:appinfo>
				<jxb:class>
					<jxb:javadoc>
<![CDATA[Defines the structure within a {@link PageDefinition}.]]>
					</jxb:javadoc>
				</jxb:class>
			</xs:appinfo>
		</xs:annotation>
		<xs:sequence>
			<xs:element maxOccurs="unbounded" name="section" type="sectionDef" minOccurs="0" />
		</xs:sequence>
	</xs:complexType>

	<xs:complexType name="sectionDef">
		<xs:annotation>
			<xs:documentation>Defines a section within the structure</xs:documentation>
			<xs:appinfo>
				<jxb:class>
					<jxb:javadoc>
<![CDATA[Defines a section within a {@link StructureDef}. A section contains multiple {@link SectionelementDef}s.]]>
					</jxb:javadoc>
				</jxb:class>
			</xs:appinfo>
		</xs:annotation>
		<xs:sequence>
			<xs:element name="config" type="sectionConfig" minOccurs="0" />
			<xs:element name="title" type="label" minOccurs="0" />
			<xs:element maxOccurs="unbounded" name="element" type="sectionelementDef" />
		</xs:sequence>
		<xs:attribute name="hidden" type="booleanValue">
			<xs:annotation>
				<xs:documentation>If evaluating to 'true', the resulting &lt;section&gt; will not be visible to the user.
				</xs:documentation>
				<xs:appinfo>
					<jxb:property>
						<jxb:javadoc>If evaluating to {@code true}, the resulting {@link Section} will not be visible to the user.
						</jxb:javadoc>
					</jxb:property>
				</xs:appinfo>
			</xs:annotation>
		</xs:attribute>
	</xs:complexType>

	<xs:complexType name="sectionConfig">
		<xs:sequence>
			<xs:element name="title" type="label" minOccurs="0" />
			<xs:element name="textelements" type="textelements" minOccurs="0" />
		</xs:sequence>
	</xs:complexType>

	<xs:complexType name="sectionelementDef">
		<xs:annotation>
			<xs:documentation>Defines an element within a section that either contains an action or a datasource.</xs:documentation>
			<xs:appinfo>
				<jxb:class>
					<jxb:javadoc>
<![CDATA[Defines an section-element within a {@link SectionDef}. 
A section-element can either be a {@link DatasourceRef} or a {@link ActionRef}.]]>
					</jxb:javadoc>
				</jxb:class>
			</xs:appinfo>
		</xs:annotation>
		<xs:sequence>
			<xs:element name="title" type="label" minOccurs="0"/>
			<xs:choice>
				<xs:element name="datasource" type="datasourceRef" />
				<xs:element name="action" type="actionRef" />
			</xs:choice>
		</xs:sequence>
		<xs:attribute name="folded" type="booleanValue">
			<xs:annotation>
				<xs:documentation>
If evaluating to 'true', the resulting &lt;sectionelement&gt; will be displayed folded.
If evaluating to 'false', the resulting &lt;sectionelement&gt; will be displayed unfolded.
				</xs:documentation>
				<xs:appinfo>
					<jxb:property>
						<jxb:javadoc>
<![CDATA[If evaluating to {@code true}, the resulting {@link Sectionelement} will be displayed folded. 
If evaluating to {@code false}, the resulting {@link Sectionelement} will be displayed unfolded.
If empty, the {@link Sectionelement} will not be foldable.]]>
						</jxb:javadoc>
					</jxb:property>
				</xs:appinfo>
			</xs:annotation>
		</xs:attribute>
		<xs:attribute name="passive" type="booleanValue">
			<xs:annotation>
				<xs:documentation>
If evaluating to 'true', the resulting &lt;sectionelement&gt; will not determine the title of the tab.
				</xs:documentation>
				<xs:appinfo>
					<jxb:property>
						<jxb:javadoc>
<![CDATA[If evaluating to {@code true}, the resulting {@link Sectionelement} will not determine the title of the tab.]]>
						</jxb:javadoc>
					</jxb:property>
				</xs:appinfo>
			</xs:annotation>
		</xs:attribute>
		<xs:attribute name="mode" type="xs:string">
			<xs:annotation>
				<xs:documentation>The display mode for this element to be used by the template.</xs:documentation>
				<xs:appinfo>
					<jxb:property>
						<jxb:javadoc>The display mode for this element to be used by the template.</jxb:javadoc>
					</jxb:property>
				</xs:appinfo>
			</xs:annotation>
		</xs:attribute>
	</xs:complexType>

	<xs:complexType name="structure">
		<xs:annotation>
			<xs:documentation>Defines the structure of a page.</xs:documentation>
			<xs:appinfo>
				<jxb:class>
					<jxb:javadoc>
<![CDATA[Defines the structure of a {@link PageDefinition}.]]>
					</jxb:javadoc>
				</jxb:class>
			</xs:appinfo>
		</xs:annotation>
		<xs:sequence>
			<xs:element maxOccurs="unbounded" name="section" type="section" minOccurs="0" />
		</xs:sequence>
	</xs:complexType>

	<xs:complexType name="section">
		<xs:annotation>
			<xs:documentation>Defines a section of the structure.</xs:documentation>
			<xs:appinfo>
				<jxb:class>
					<jxb:javadoc>
<![CDATA[Defines a section of a {@link Structure}. A section can contain multiple {@link Sectionelement}s.]]>
					</jxb:javadoc>
				</jxb:class>
			</xs:appinfo>
		</xs:annotation>
		<xs:sequence>
			<xs:element name="config" type="sectionConfig" minOccurs="0" />
			<xs:element name="title" type="label" minOccurs="0" />
			<xs:element maxOccurs="unbounded" name="element" type="sectionelement" minOccurs="0" />
		</xs:sequence>
		<xs:attribute name="hidden" type="booleanValue">
			<xs:annotation>
				<xs:documentation>If evaluating to 'true', the &lt;section&gt; will not be visible to the user.
				</xs:documentation>
				<xs:appinfo>
					<jxb:property>
						<jxb:javadoc>
<![CDATA[If evaluating to {@code true}, the {@link Section} will not be visible to the user.]]>
						</jxb:javadoc>
					</jxb:property>
				</xs:appinfo>
			</xs:annotation>
		</xs:attribute>
		<xs:attribute name="executionTime" type="xs:long">
			<xs:annotation>
				<xs:documentation>
<![CDATA[The time in milliseconds it took to process this section.]]>
				</xs:documentation>
				<xs:appinfo>
					<jxb:property>
						<jxb:javadoc>
<![CDATA[The time in milliseconds it took to process this {@code Section}.]]>
						</jxb:javadoc>
					</jxb:property>
				</xs:appinfo>
			</xs:annotation>
		</xs:attribute>
	</xs:complexType>

	<xs:complexType name="sectionelement">
		<xs:annotation>
			<xs:documentation>Defines an element of a section.</xs:documentation>
			<xs:appinfo>
				<jxb:class>
					<jxb:javadoc>
<![CDATA[Defines an element of a {@link Section}.]]>
					</jxb:javadoc>
				</jxb:class>
			</xs:appinfo>
		</xs:annotation>
		<xs:sequence>
			<xs:element name="title" type="label" minOccurs="0"/>
			<xs:choice>
				<xs:element name="datasource" type="datasource" />
				<xs:element name="action" type="action" />
			</xs:choice>
		</xs:sequence>
		<xs:attribute name="folded" type="booleanValue">
			<xs:annotation>
				<xs:documentation>
If evaluating to 'true', the &lt;sectionelement&gt; will be displayed folded.
If evaluating to 'false', the resulting &lt;sectionelement&gt; will be displayed unfolded.
If empty, the {@link Sectionelement} will not be foldable.
				</xs:documentation>
				<xs:appinfo>
					<jxb:property>
						<jxb:javadoc>
<![CDATA[If evaluating to {@code true}, the {@link Sectionelement} will be displayed folded. 
If evaluating to {@code false}, the {@link Sectionelement} will be displayed unfolded.
If empty, the {@link Sectionelement} will not be foldable.]]>
						</jxb:javadoc>
					</jxb:property>
				</xs:appinfo>
			</xs:annotation>
		</xs:attribute>
		<xs:attribute name="passive" type="booleanValue">
			<xs:annotation>
				<xs:documentation>
If evaluating to 'true', the &lt;sectionelement&gt; will not determine the title of the tab.
				</xs:documentation>
				<xs:appinfo>
					<jxb:property>
						<jxb:javadoc>If evaluating to {@code true}, the {@link Sectionelement} will not determine the title of the tab.
						</jxb:javadoc>
					</jxb:property>
				</xs:appinfo>
			</xs:annotation>
		</xs:attribute>
		<xs:attribute name="mode" type="xs:string">
			<xs:annotation>
				<xs:documentation>The display mode for this element to be used by the template.</xs:documentation>
				<xs:appinfo>
					<jxb:property>
						<jxb:javadoc>The display mode for this element to be used by the template.</jxb:javadoc>
					</jxb:property>
				</xs:appinfo>
			</xs:annotation>
		</xs:attribute>
		<xs:attribute name="executionTime" type="xs:long">
			<xs:annotation>
				<xs:documentation>
<![CDATA[The time in milliseconds it took to process this sectionelement.]]>
				</xs:documentation>
				<xs:appinfo>
					<jxb:property>
						<jxb:javadoc>
<![CDATA[The time in milliseconds it took to process this {@code Sectionelement}.]]>
						</jxb:javadoc>
					</jxb:property>
				</xs:appinfo>
			</xs:annotation>
		</xs:attribute>
	</xs:complexType>

	

	<xs:complexType name="platformConfig">
		<xs:annotation>
			<xs:documentation><![CDATA[The configuration for the owning <platform>.]]></xs:documentation>
			<xs:appinfo>
				<jxb:class>
					<jxb:javadoc>
<![CDATA[The configuration for the owning {@link Platform}.]]>
					</jxb:javadoc>
				</jxb:class>
			</xs:appinfo>
		</xs:annotation>
		<xs:sequence>
			<xs:element name="labels" type="labels" minOccurs="0" />
			<xs:element name="output-format" type="output-format" maxOccurs="unbounded" />
			<xs:element name="authentications" type="authentications" minOccurs="0" />
			<xs:element name="session" type="sessionInfo" minOccurs="0" />
			<xs:element name="platform-url" type="xs:string" minOccurs="0" />
			<xs:element name="base-url" type="xs:string" minOccurs="0" />
			<xs:element name="current-url" type="xs:string" minOccurs="0" />
			<xs:element name="output" type="output" minOccurs="0" />
			<xs:element name="textelements" type="textelements" minOccurs="0" />
			<xs:element name="debug" type="xs:boolean" minOccurs="0" />
		</xs:sequence>
	</xs:complexType>

	<xs:complexType name="output-format">
		<xs:annotation>
			<xs:documentation>The output-format determines the basic format of the output, such as html,pdf or xml. The default output-format is 'html'.
A format can provide several output-types, each of them offering a different layout.</xs:documentation>
			<xs:appinfo>
				<jxb:class>
					<jxb:javadoc>
<![CDATA[The OutputFormat determines the basic format of the output, such as html,pdf or xml. The default OutputFormat is 'html'.
A format can provide several {@link OutputType}s, each of them offering a different layout.]]>
					</jxb:javadoc>
				</jxb:class>
			</xs:appinfo>
		</xs:annotation>
		<xs:sequence>
			<xs:element name="permissions" type="permissions" minOccurs="0" />
			<xs:element name="output-type" type="output-type" maxOccurs="unbounded" />
		</xs:sequence>
		<xs:attribute name="id" type="xs:string">
			<xs:annotation>
				<xs:documentation>The unique Id for this output-format.</xs:documentation>
				<xs:appinfo>
					<jxb:property>
						<jxb:javadoc>The unique Id for this {@link OutputFormat}</jxb:javadoc>
					</jxb:property>
				</xs:appinfo>
			</xs:annotation>
		</xs:attribute>
		<xs:attribute name="default" type="xs:boolean">
			<xs:annotation>
				<xs:documentation>Set to 'true' if this is the default output-format.</xs:documentation>
				<xs:appinfo>
					<jxb:property>
						<jxb:javadoc>Set to 'true' if this is the default {@link OutputFormat}.</jxb:javadoc>
					</jxb:property>
				</xs:appinfo>
			</xs:annotation>
		</xs:attribute>
	</xs:complexType>

	<xs:complexType name="output-type">
		<xs:annotation>
			<xs:documentation>An output-type offers a certain layout for a output-format. 
For example, there could be one output-type optimized for desktop clients and one optmized for mobile clients. 
Therefore, several templates are used, which contain the necessary XSL transformations.</xs:documentation>
			<xs:appinfo>
				<jxb:class>
					<jxb:javadoc>
<![CDATA[An OutputType offers a certain layout for a {@link OutputFormat}. 
For example, there could be one OutputType optimized for desktop clients and one optmized for mobile clients. 
Therefore, several {@link Template}s are used, which contain the nessecarry XSL transformations.]]>
					</jxb:javadoc>
				</jxb:class>
			</xs:appinfo>
		</xs:annotation>
		<xs:sequence>
			<xs:element name="permissions" type="permissions" minOccurs="0" />
			<xs:element name="template" type="template" maxOccurs="unbounded" />
		</xs:sequence>
		<xs:attribute name="id" type="xs:string">
			<xs:annotation>
				<xs:documentation>The unique Id for this output type within the parent output-format.</xs:documentation>
				<xs:appinfo>
					<jxb:property>
						<jxb:javadoc>The unique Id for this OutputType within the parent {@link OutputFormat}.</jxb:javadoc>
					</jxb:property>
				</xs:appinfo>
			</xs:annotation>
		</xs:attribute>
		<xs:attribute name="default" type="xs:boolean">
			<xs:annotation>
				<xs:documentation>Set to 'true' if this is the default output-type for the parent output-format.</xs:documentation>
				<xs:appinfo>
					<jxb:property>
						<jxb:javadoc>Set to 'true' if this is the default OutputType for the parent {@link OutputFormat}.</jxb:javadoc>
					</jxb:property>
				</xs:appinfo>
			</xs:annotation>
		</xs:attribute>
	</xs:complexType>

	<xs:complexType name="subject">
		<xs:annotation>
			<xs:documentation>A subject contains information about the currently logged-in user.</xs:documentation>
			<xs:appinfo>
				<jxb:class>
					<jxb:javadoc>
<![CDATA[A subject contains information about the currently logged-in user.]]>
					</jxb:javadoc>
				</jxb:class>
			</xs:appinfo>
		</xs:annotation>
		<xs:sequence>
			<xs:element name="username" type="xs:string" />
			<xs:element name="name" type="xs:string" />
			<xs:element name="localization" type="localization" />
		</xs:sequence>
	</xs:complexType>

	<xs:complexType name="localization">
		<xs:annotation>
			<xs:documentation>Contains all localization-relevant information.</xs:documentation>
			<xs:appinfo>
				<jxb:class>
					<jxb:javadoc>
<![CDATA[Contains all localization-relevant information]]>
					</jxb:javadoc>
				</jxb:class>
			</xs:appinfo>
		</xs:annotation>
		<xs:sequence>
			<xs:element name="language" type="xs:string" />
			<xs:element name="decimalSeparator" type="xs:string" />
			<xs:element name="groupingSeparator" type="xs:string" />
		</xs:sequence>
	</xs:complexType>

	<xs:complexType name="navigation">
		<xs:annotation>
			<xs:documentation>Defines the navigation, containing multiple navigation-items.</xs:documentation>
			<xs:appinfo>
				<jxb:class>
					<jxb:javadoc>
	]>
					</jxb:javadoc>
				</jxb:class>
			</xs:appinfo>
		</xs:annotation>
		<xs:sequence>
			<xs:element name="item" type="navigation-item" maxOccurs="unbounded" />
		</xs:sequence>
	</xs:complexType>


	<xs:complexType name="navigation-item">
		<xs:annotation>
			<xs:documentation>A single item for navigation.</xs:documentation>
			<xs:appinfo>
				<jxb:class>
					<jxb:javadoc>
<![CDATA[A single item for navigation.]]>
					</jxb:javadoc>
				</jxb:class>
			</xs:appinfo>
		</xs:annotation>
		<xs:sequence>
			<xs:element name="label" type="xs:string" minOccurs="0" />
			<xs:element name="icon" type="icon" minOccurs="0" />
			<xs:element name="item" type="navigation-item" minOccurs="0" maxOccurs="unbounded" />
		</xs:sequence>
		<xs:attribute name="type" type="itemType">
			<xs:annotation>
				<xs:documentation>The type of this item.</xs:documentation>
				<xs:appinfo>
					<jxb:property>
						<jxb:javadoc>
<![CDATA[The type of this item.
@see ItemType]]>
						</jxb:javadoc>
					</jxb:property>
				</xs:appinfo>
			</xs:annotation>
		</xs:attribute>
		<xs:attribute name="ref" type="xs:string">
			<xs:annotation>
				<xs:documentation>The URL-reference for this item, meaning it contains the navigation path.</xs:documentation>
				<xs:appinfo>
					<jxb:property>
						<jxb:javadoc>The URL-reference for this item, meaning it contains the navigation path.</jxb:javadoc>
					</jxb:property>
				</xs:appinfo>
			</xs:annotation>
		</xs:attribute>
		<xs:attribute name="name" type="xs:string">
			<xs:annotation>
				<xs:documentation>The name of this navigation item.</xs:documentation>
				<xs:appinfo>
					<jxb:property>
						<jxb:javadoc>The name of this navigation item.</jxb:javadoc>
					</jxb:property>
				</xs:appinfo>
			</xs:annotation>
		</xs:attribute>
		<xs:attribute name="site" type="xs:string">
			<xs:annotation>
				<xs:documentation>The name of the site this item belongs to.</xs:documentation>
				<xs:appinfo>
					<jxb:property>
						<jxb:javadoc>The name of the site this item belongs to.</jxb:javadoc>
					</jxb:property>
				</xs:appinfo>
			</xs:annotation>
		</xs:attribute>
		<xs:attribute name="application" type="xs:string">
			<xs:annotation>
				<xs:documentation>The name of the application this item belongs to.</xs:documentation>
				<xs:appinfo>
					<jxb:property>
						<jxb:javadoc>The name of the application this item belongs to.</jxb:javadoc>
					</jxb:property>
				</xs:appinfo>
			</xs:annotation>
		</xs:attribute>
